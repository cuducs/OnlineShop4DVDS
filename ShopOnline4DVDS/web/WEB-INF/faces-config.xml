<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <lifecycle>
        <phase-listener>
            g3.custom.phaselistener.AdminSideMenuPhaseListener
        </phase-listener>
        <phase-listener>
            g3.custom.phaselistener.AuthenticatePhaseListener
        </phase-listener>
    </lifecycle>
    <navigation-rule>
        <description>
            global navigation rules
        </description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>adminindex</from-outcome>
            <to-view-id>/admin/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showproduct</from-outcome>
            <to-view-id>/showproduct.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/user/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>customerlogin</from-outcome>
            <to-view-id>/user/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>cuslistproduct</from-outcome>
            <to-view-id>/user/listproduct.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cart</from-outcome>
            <to-view-id>/user/cart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/member/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>adminwelcome</from-outcome>
            <to-view-id>/admin/common/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminerror</from-outcome>
            <to-view-id>/admin/free/error.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminlogin</from-outcome>
            <to-view-id>/admin/free/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            global navigation rules of admin
        </description>
        <from-view-id>/admin/*</from-view-id>
        <navigation-case>
            <from-outcome>productshow</from-outcome>
            <to-view-id>/admin/product/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>ordershow</from-outcome>
            <to-view-id>/admin/order/order.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>fileshow</from-outcome>
            <to-view-id>/admin/file/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>albumshow</from-outcome>
            <to-view-id>/admin/album/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>songshow</from-outcome>
            <to-view-id>/admin/song/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>producershow</from-outcome>
            <to-view-id>/admin/producer/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>suppliershow</from-outcome>
            <to-view-id>/admin/supplier/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>artistshow</from-outcome>
            <to-view-id>/admin/artist/show.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>sort</from-outcome>
            <to-view-id>/admin/order/sort.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/admin/album/addsong.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>details</from-outcome>
            <to-view-id>/admin/song/details.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/song/details.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addsong</from-outcome>
            <to-view-id>/admin/album/addsong.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/category/addcategory.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>show</from-outcome>
            <to-view-id>/admin/category/show.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/category/show.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>create</from-outcome>
            <to-view-id>/admin/category/addcategory.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>details</from-outcome>
            <to-view-id>/admin/category/detail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/product/details.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>producerdetail</from-outcome>
            <to-view-id>/admin/producer/details.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>supplierdetail</from-outcome>
            <to-view-id>/admin/supplier/details.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>trailerdetail</from-outcome>
            <to-view-id>/admin/file/details.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>albumdetail</from-outcome>
            <to-view-id>/admin/album/details.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
